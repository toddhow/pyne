{
	"extends": "@sapphire/ts-config/tsconfig",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"composite": true,
		"paths": {
			"#lib/*": ["lib/*"],
			"#utils/*": ["lib/util/*"],
			"#root/*": ["*"]
		},
		"tsBuildInfoFile": "dist/.tsbuildinfo"
		},
	"include": ["src"]
}